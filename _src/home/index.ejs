<% /* フッター */ %>
<%- include(setLayered + "base/footer") %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="/js/instafeed.min.js"></script>
<script src="/js/base.min.js"></script>
</body>
</html>